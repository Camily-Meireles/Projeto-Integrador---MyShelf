@model MyShelf.Areas.Seguranca.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Acessando o sistema";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        <div class="panel-heading">
        </div>
        <div>
            <div class="form-horizontal">
                @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Count() > 0))
                {
                    <div class="alert alert-danger alert-dismissable">
                        @Html.ValidationSummary(false, "Verifique os seguintes erros:")
                    </div>
                }
                <form class="formestante">
                    <fieldset>
                        <legend>Login</legend>
                        <div>
                            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div>
                            @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <input type="submit" value="Acessar" class="btn btn-danger" />
                        <br>
                        Não possui cadastro?
                        <br>
                        <a href="@Url.Action("Create", "Admin", new { Area = "Seguranca" })">Cadastre-se</a>
                    </fieldset>
                </form>
 

            </div>
        </div>
    </div>
}
