@model MyShelf.Models.Livro

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <!-- ---------------------------------------------------- -->
    <h1> @Html.DisplayFor(model => model.Nome)</h1>

    <section>
        <img src="" alt="" />
        <ul class="informacoes">
            <!-- <li><a href="perfil.html">Usuário</a></li> -->
            <li>@Html.DisplayNameFor(model => model.Autor) <br /> @Html.DisplayFor(model => model.Autor)</li>
            <br />
            <li>@Html.DisplayNameFor(model => model.AnoLancamento) <br /> @Html.DisplayFor(model => model.AnoLancamento)</li>
            <br/>
        </ul>

        <ul class="tags">
            <p class="sinopse">
                @Html.DisplayNameFor(model => model.Descricao)
                <br />
                @Html.DisplayFor(model => model.Descricao)
            </p>
        </ul>
    </section>

    <section class="PDF">
        <h1> PDF's / E-books </h1>

        <img src="" alt="">
    </section>

    <section class="comentarios">
        <h1>Comentários</h1>
    </section>
</main><!-- ---------------------------------------------------- -->
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.LivroID }) |
    <a href="@Url.Action("Details", "Estantes", new { id = Model.EstanteID })"> Retornar à estante | </a>
</p>
